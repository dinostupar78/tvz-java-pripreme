<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox alignment="CENTER" spacing="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.javafx.controller.CategoryAddController">
    <fx:include source="menuBar.fxml" />
    <children>
        <GridPane prefHeight="600.0" prefWidth="800.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="462.0" minWidth="10.0" prefWidth="409.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="486.0" minWidth="10.0" prefWidth="391.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Category Add" GridPane.columnSpan="2" GridPane.halignment="CENTER">
                    <font>
                        <Font name="Consolas Bold" size="24.0" />
                    </font>
                    <GridPane.margin>
                        <Insets top="5.0" />
                    </GridPane.margin>
                </Label>
                <Label text="Enter Category Name:" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets right="5.0" top="-40.0" />
                    </GridPane.margin>
                    <font>
                        <Font name="Calibri Bold Italic" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="categoryTextFieldName" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="10.0" right="10.0" top="-40.0" />
                    </GridPane.margin>
                </TextField>

                <Label text="Enter Category Description:" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                    <font>
                        <Font name="Calibri Bold" size="20.0" />
                    </font>
                    <GridPane.margin>
                        <Insets right="5.0" top="35.0" />
                    </GridPane.margin>
                </Label>
                <TextField fx:id="categoryTextFieldDescription" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="10.0" right="10.0" top="35.0" />
                    </GridPane.margin>
                </TextField>

                <Label text="Category Active:" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                    <font>
                        <Font name="Calibri Bold" size="20.0" />
                    </font>
                    <GridPane.margin>
                        <Insets right="5.0" top="10.0" />
                    </GridPane.margin>
                </Label>
                <CheckBox fx:id="activeCheckBox" text="Active" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </GridPane.margin>
                </CheckBox>

                <Label text="Category Type:" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
                    <font>
                        <Font name="Calibri Bold" size="20.0" />
                    </font>
                    <GridPane.margin>
                        <Insets right="5.0" top="10.0" />
                    </GridPane.margin>
                </Label>
                <RadioButton fx:id="typeRadioButton1" text="Type 1" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <RadioButton fx:id="typeRadioButton2" text="Type 2" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Button mnemonicParsing="false" onAction="#addNewCategory" text="Add" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="6">
                    <GridPane.margin>
                        <Insets top="5.0" />
                    </GridPane.margin>
                    <font>
                        <Font name="Calibri Bold Italic" size="18.0" />
                    </font>
                </Button>
            </children>
        </GridPane>
    </children>
</VBox>
